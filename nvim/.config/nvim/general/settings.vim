" Leader key
let g:mapleader="\<Space>"

syntax on
set nocompatible
set hidden
set encoding=utf-8
set ruler
set number
set mouse=a
set inccommand=split
set tabstop=2 softtabstop=2
set shiftwidth=2
set smartindent
set noswapfile
set colorcolumn=80
set showtabline=2
set cursorline
filetype plugin on
let NERDTreeShowHidden=1
